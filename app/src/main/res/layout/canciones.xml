<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:background="@color/spotifyToolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:background="@color/spotifyToolbar">
        <ImageView
            android:id="@+id/imgDisco"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Titulo playlist"
                android:padding="5dp"
                android:id="@+id/txtTituloCancion"
                android:textAppearance="?attr/textAppearanceHeadline6" />
            <TextView
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="X Seguidores"
                android:padding="0dp"
                android:id="@+id/txtAutor"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageView
                android:id="@+id/btLike"
                android:layout_marginTop="24dp"
                android:layout_marginRight="6dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/light_like"
                app:tint="@color/gray_shuffle" />

            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginRight="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_no_entry_96"
                app:tint="@color/gray_shuffle" />
            <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginRight="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_menu_vertical_90__1_"
                app:tint="@color/gray_shuffle" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>