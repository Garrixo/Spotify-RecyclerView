<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/background_spotify">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background_spotify">
        <ImageView
            android:id="@+id/myImg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShuffle"
                android:layout_width="17dp"
                android:layout_height="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/gray_shuffle"
                android:src="@drawable/icons8_shuffle_48" />

            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Titulo playlist"
                android:padding="5dp"
                android:id="@+id/txtTitulo"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>


        <TextView
            android:textSize="10dp"
            android:textColor="@color/gray_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="X Seguidores"
            android:padding="0dp"
            android:id="@+id/txtSeguidores"
            android:textAppearance="?attr/textAppearanceHeadline6" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>